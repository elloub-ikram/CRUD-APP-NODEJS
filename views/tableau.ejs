            <!-- /Content -->
<script   >
            function delete_click(id)
            {
              
              

              $(".modal-body2 #plt").val( id );
          
             $("#modalToggle2").modal('show');
      
            }



            function modify_click(id,name,color,size,quantity,price)
            {
              
              

              $(".modal-body #plt").val( id );
              $(".modal-body #name").val( name );
              $(".modal-body #color").val( color );
              $(".modal-body #size").val( size );
              $(".modal-body #qte").val( quantity );
              $(".modal-body #price").val( price );
             $("#modalCenter").modal('show');
        
        
      
            }
            

</script>
              <!-- Modal modify -->
              <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true" >

                <div class="modal-dialog modal-dialog-centered" role="document">
                 <div class="modal-content">
                  <form  action="/modify_plate/?_method=put" method="post">
                    <div class="modal-header">
                      <h5 class="modal-title" id="modalCenterTitle">Update</h5>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                      ></button>
                    </div>
                    <div class="modal-body">
                      <div class="row">
                        <div class="col mb-3">
                          <input type="hidden" name="id" id="plt">
                          <label for="nameWithTitle" class="form-label">Name</label>
                          <select id="largeSelect" class="form-select form-select-lg" name="name" id="name">
                            <option value="Sunflower">Sunflower</option>
                          <option value="Majesty palm">Majesty palm</option>
                          <option value="Faux olive tree">Faux olive tree</option>
                          <option value="Faux olive tree">Cyclos Revoluta</option>
                          <option value="Chamae Dorea Elegance">Chamae Dorea Elegance</option>
                          <option value="Ficus Audrey">Ficus Audrey</option>
                          <option value="Cuclanew">Cuclanew</option>
                          </select>
                        </div>
                      </div>
                      <div class="row g-2">
                       


                        <div class="col mb-0">
                          <label for="emailWithTitle" class="form-label">Color</label>
                           <select id="defaultSelect" class="form-select" name="color" value="<% id="color" %> ">
                            <option value="White">White</option>
                            <option value="Pink">Pink</option>
                            <option value="Red">Red</option>
                            <option value="Yellow">Yellow</option>
                          </select>
                        </div>


                        <div class="col mb-0">
                          <label for="dobWithTitle" class="form-label">Size</label>
                           <select id="defaultSelect" class="form-select" name="size" id="size" >
                            <option value="Large">Large</option>
                            <option value="Small">Small</option>
                            <option value="Medium">Medium</option>
                          </select>
                        </div>
                      </div>
                      <div class="row g-2">
                       

                        <div class="col mb-0">
                          
                          <label for="emailWithTitle" class="form-label">Quantity</label>
                          <input
                            type="text"
                            class="form-control"
                            name="quantity"
                            id="qte"
                          />
                        </div>


                        <div class="col mb-0">
                          <label for="dobWithTitle" class="form-label">Price</label>
                          <input
                            type="text"
                            class="form-control"
                            id="price"
                            name="price"
                          />
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        Close
                      </button>

                      
                       
                      

                      <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                
                  </form>
                  </div>
                </div>
