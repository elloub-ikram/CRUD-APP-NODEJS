 <p>ggggggggggggggggggggggggggg</p>
          <div class="content-wrapper">

            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">

             <!-- Hoverable Table data -->
               <hr class="my-5" />
              <div class="card">
                <h5 class="card-header">Data from stock</h5>
                <div class="table-responsive text-nowrap">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>ID</th>
                        <th>Plant_name</th>
                        <th>size</th>
                        <th>color</th>
                        <th>quantity</th>
                        <th>price</th>
                        <th>Action</th>
                      </tr>
                    </thead>

                    <tbody class="table-border-bottom-0">
 
                      <% Data.forEach(function(plante) { %>
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= plante._id %></strong></td>
                        <td><%= plante.name %> Cook</td>
                        <td><%= plante.size %></td>
                        <td><%= plante.color %>
                        </td>
                        <td><%= plante.quantity %></td>
                        <td><%= plante.price %></td>
                        <td>

                        
                          <table>
                            <td style="padding: 3px;"><button 
                              data-dismiss="modal"
                              onclick='modify_click("<%= plante._id %>","<%= plante.name %>","<%= plante.size %>","<%= plante.color %>","<%= plante.quantity %>","<%= plante.price %>")'
                              type="button" 
                              class="btn btn-primary"
                             
                              >Update</button>
                          
                            
                            
                            </td>
                            <td style="padding: 3px;"><button 
                              data-dismiss="modal"
                              onclick='delete_click("<%= plante._id %>")'
                              type="button" 
                              class="btn btn-primary"
                             
                              >Delete</button>
                          
                            
                            
                            </td>
                            
                        
                          </table>
                        </td>
                      </tr>
                      <% });%>
